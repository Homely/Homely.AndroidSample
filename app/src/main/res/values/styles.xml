<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style
        name="AppTheme.Text"
        >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style
        name="AppTheme.ListingCard"
        parent="@style/AppTheme.Text"
        >
    </style>

    <style
        name="AppTheme.ListingCard.Image"
        parent="@style/AppTheme.ListingCard"
        >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="AppTheme.ListingCard.Statuses"
        parent="@style/AppTheme.ListingCard.Image"
        >
        <item name="android:textSize">14sp</item>
    </style>

    <style
        name="AppTheme.ListingCard.PriceDescription"
        parent="@style/AppTheme.ListingCard.Image"
        >
        <item name="android:textSize">24sp</item>
    </style>

    <style
        name="AppTheme.ListingCard.Info"
        parent="@style/AppTheme.Text"
        >
        <item name="android:textSize">16sp</item>
    </style>

    <style
        name="AppTheme.ListingCard.Address"
        parent="@style/AppTheme.ListingCard.Info"
        >
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="AppTheme.ListingCard.BedBathCar"
        parent="@style/AppTheme.ListingCard.Info"
        >
    </style>

</resources>
