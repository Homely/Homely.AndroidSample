<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        >
        <au.com.homely.sampleapp.RoundedRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_alignBottom="@id/thumbnail"
                >
                <TextView
                    android:id="@+id/statuses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AppTheme.ListingCard.Statuses"
                    android:height="16dp"
                    android:maxLines="1"
                    android:gravity="center|start"
                    android:text="Statuses"
                    />
                <TextView
                    android:id="@+id/priceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/AppTheme.ListingCard.PriceDescription"
                    android:height="29dp"
                    android:maxLines="1"
                    android:gravity="center|start"
                    android:text="Price Description"
                    />
            </LinearLayout>
        </au.com.homely.sampleapp.RoundedRelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/heart_button"
                android:textAppearance="@style/AppTheme.ListingCard.Address"
                android:height="22dp"
                android:maxLines="1"
                android:gravity="center|start"
                android:text="Listing Address"
                />
            <TextView
                android:id="@+id/bedBathCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/heart_button"
                android:layout_below="@+id/address"
                android:textAppearance="@style/AppTheme.ListingCard.BedBathCar"
                android:height="22dp"
                android:maxLines="1"
                android:gravity="center|start"
                android:text="Bed Bath Car"
                />

            <ImageView
                android:id="@+id/heart_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_heart_icon"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

